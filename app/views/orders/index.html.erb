<div class='transaction-contents'>
  <div class='transaction-main'>
    <h1 class='transaction-title-text'>
      依頼内容の確認
    </h1>
    <%# 依頼内容の表示 %>
    <div class='buy-guide-info'>
      <%= image_tag @guide.image, class: 'buy-guide-img' %>
      <div class='buy-guide-right-content'>
        <h2 class='buy-guide-text'>
          <%= @guide.name %>
        </h2>
        <div class='buy-guide-price'>
          <p class='guide-price-text'>¥<%= @guide.price %></p>
          <p class='guide-price-sub-text'><%= '配送料負担' %></p>
        </div>
      </div>
    </div>
    <%# /購入内容の表示 %>

    <%# 支払額の表示 %>
    <div class='guide-payment'>
      <h1 class='guide-payment-title'>
        支払金額
      </h1>
      <p class='guide-payment-price'>
        ¥<%= @guide.price %>
      </p>
    </div>
    <%# /支払額の表示 %>

    <%= render 'shared/error_messages', model: @purchase_record_address %>

    <%= form_with url: guide_purchase_records_path, model: @purchase_record_address, id: 'charge-form', class: 'transaction-form-wrap',local: true do |f| %>
    <%# カード情報の入力 %>
    <div class='credit-card-form'>
      <h1 class='info-input-haedline'>
        クレジットカード情報入力
      </h1>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">カード情報</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :number, class:"input-default", id:"card-number", placeholder:"カード番号(半角英数字)", maxlength:"16" %>
        <div class='available-card'>
          <%= image_tag 'card-visa.gif', class: 'card-logo'%>
          <%= image_tag 'card-mastercard.gif', class: 'card-logo'%>
          <%= image_tag 'card-jcb.gif', class: 'card-logo'%>
          <%= image_tag 'card-amex.gif', class: 'card-logo'%>
        </div>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">有効期限</label>
          <span class="indispensable">必須</span>
        </div>
        <div class='input-expiration-date-wrap'>
          <%= f.text_area :exp_month, class:"input-expiration-date", id:"card-exp-month", placeholder:"例)3" %>
          <p>月</p>
          <%= f.text_area :exp_year, class:"input-expiration-date", id:"card-exp-year", placeholder:"例)23" %>
          <p>年</p>
        </div>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">セキュリティコード</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :cvc,class:"input-default", id:"card-cvc", placeholder:"カード背面4桁もしくは3桁の番号", maxlength:"4" %>
      </div>
    </div>
    <%# /カード情報の入力 %>
    
    <%# メールアドレスの入力 %>
    <div class='shipping-email-form'>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">番地</label>
        </div>
        <%= f.text_field :house_number, class:"input-default", id:"addresses", placeholder:"例）青山1-1-1"%>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">建物名</label>
        </div>
        <%= f.text_field :building, class:"input-default", id:"building", placeholder:"例）柳ビル103"%>
      </div>
    </div>
    <%# /メールアドレスの入力 %>
    <div class='buy-btn'>
      <%= f.submit "ガイド依頼を確定する" ,class:"buy-red-btn" %>
    </div>
    <% end %>
  </div>
</div>